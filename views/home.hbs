<!DOCTYPE html>
{{!-- Log data to console --}}
<script>
  console.log("In hbs");
  console.log('blairBoundStops:', {{blairBoundStops}});
  console.log('tunneysPastureBoundStops:', {{tunneysPastureBoundStops}});
</script>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transit Schedule</title>
  <!-- Include Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <a class="navbar-brand" href="#">Transit Schedule</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/home">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/mystop">My Stop</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/about">About</a>
        </li>
        <!-- Check if the user is an admin before displaying the Users tab -->
        {{#if isAdmin}}
          <li class="nav-item">
            <a class="nav-link" href="/users">Users</a>
          </li>
        {{/if}}
      </ul>
    </div>
  </nav>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h2 class="text-center">Transit Schedule</h2>

        <!-- Blair-Bound Departures -->
        <div class="card mb-4">
          <div class="card-header text-white bg-primary">
            <h5 class="mb-0">Blair-Bound Departures</h5>
          </div>
          <div class="card-body">
            {{#each blairBoundStops}}
              <div class="d-flex justify-content-between mb-3">
                <span>{{stopName}}</span>
                <span>{{departureTime}}</span>
              </div>
            {{/each}}
          </div>
        </div>

        <!-- Tunney's Pasture-Bound Departures -->
        <div class="card">
          <div class="card-header text-white bg-danger">
            <h5 class="mb-0">Tunney's Pasture-Bound Departures</h5>
          </div>
          <div class="card-body">
            {{#each tunneysPastureBoundStops}}
              <div class="d-flex justify-content-between mb-3">
                <span>{{stopName}}</span>
                <span>{{departureTime}}</span>
              </div>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Include Bootstrap JS and Popper.js -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
